@page
@using OrderSmart.Models
@model OrderSmart.Pages.CustomerOrderScreen.CustomerOrderScreenModel
@{
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrderSmart</title>
    <link rel="stylesheet" href="~/css/CustomerOrderScreen.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script>
        //Javascript som opdaterer siden automatisk hvert 15. sekund.
        function timedRefresh(timeoutPeriod) {
            setTimeout("location.reload(true);",timeoutPeriod);
        }
        window.onload = timedRefresh(15000);
    </script>
</head>

<body>

    <table class="table table-borderless">
        <thead>
            <tr>
                <th>
                    Modtaget
                </th>
                <th class="table-warning">
                    Pakkes
                </th>
                <th class="table-success">
                    Klar
                </th>
                @*<th>
                        Udleveret
                    </th>*@
            </tr>
        </thead>
        <tbody>
            <tr>
                @* Laver TableCell hvor man itererer igennem alle ordre med ønsket status og laver et nyt row for hver ordre. *@
                <td>
                    @foreach (var item in Model.Orders.Where(item => item.OrderStatus == (Order.Status)0))
                    {
                        <table clas="table">
                            <tr>
                                <a class="btn btn-primary">@item.ID</a>
                            </tr>
                        </table>
                    }
                </td>
                <td>
                    @foreach (var item in Model.Orders.Where(item => item.OrderStatus == (Order.Status)1))
                    {
                        <table clas="table">
                            <tr>
                                <a class="btn btn-primary">@item.ID</a>
                            </tr>
                        </table>
                    }
                </td>
                <td>
                    @foreach (var item in Model.Orders.Where(item => item.OrderStatus == (Order.Status)2))
                    {
                        <table clas="table">
                            <tr>
                                <a class="btn btn-primary">@item.ID</a>
                            </tr>
                        </table>
                    }
                </td>
                @*<td>
                        @foreach (var item in Model.Orders.Where(item => item.OrderStatus == (Order.Status)3))
                        {
                            <table clas="table">
                                <tr>
                                    <a class="btn btn-primary">@item.ID</a>
                                </tr>
                            </table>
                        }
                    </td>*@
            </tr>
        </tbody>
    </table>
</body>